@model QuadCRUD.Models.Student

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.Gender)*@
            @{
                string gender = "";
                if (Model.Gender == 0)
                {
                    gender = "Female";
                }
                if (Model.Gender == 1)
                {
                    gender = "Male";
                }
                if (Model.Gender == 2)
                {
                    gender = "Others";
                }
            }
            @gender
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DOB)
        </dt>
        <dd class = "col-sm-10">
            @String.Format("{0:dd-MM-yyyy}", Model.DOB)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Class)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Class.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="List">Back to List</a>
</div>
